{
    "name": "spbot/spbot",
    "description": "Система управления сменами",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "vlucas/phpdotenv": "^5.5",
        "phpmailer/phpmailer": "^6.8",
        "firebase/php-jwt": "^6.4",
        "phpoffice/phpword": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Spbot\\": "src/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "symfony/var-dumper": "^6.3"
    }
} 