# Основные настройки приложения
APP_ENV=development
APP_DEBUG=true
APP_URL=https://staffprobot.ru
API_VERSION=1.0
API_KEY=your_api_key_here
TIMEZONE=Europe/Moscow

# Настройки базы данных
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_CHARSET=utf8mb4

# Настройки почты
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_mail_username
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="StaffProBot"

# Настройки Stripe
STRIPE_KEY=your_stripe_key
STRIPE_SECRET=your_stripe_secret

# Настройки Telegram
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Настройки валюты и цен
DEFAULT_CURRENCY=RUB
PRICE_DECIMAL_PLACES=2
PRICE_DECIMAL_SEPARATOR=.
PRICE_THOUSAND_SEPARATOR=,

# Настройки авторизации и сессий
AUTH_TOKEN_LIFETIME=86400
SESSION_LIFETIME=120

# Настройки логирования
LOG_RETENTION_DAYS=30
LOG_DEFAULT_LIMIT=100
LOG_ENABLED=false
LOG_START_LINE=3047

# Форматы дат
DATE_FORMAT=Y-m-d H:i:s
DB_DATETIME_FORMAT=Y-m-d H:i:s
DB_DATE_FORMAT=Y-m-d
DB_TIME_FORMAT=H:i:s
DB_DATETIME_DISPLAY_FORMAT=d.m.Y H:i
DB_DATE_DISPLAY_FORMAT=d.m.Y
DB_TIME_DISPLAY_FORMAT=H:i
DB_DATETIME_MYSQL_FORMAT=%Y-%m-%d %H:%i:%s

# Настройки загрузки файлов
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_MAX_SIZE=5

# Пути к директориям
CACHE_PATH=storage/cache
ROUTES_PATH=config/routes
CONFIG_PATH=config

# Администратор по умолчанию
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_secure_password

# Настройки тарифных планов
PLAN_BASIC_PRICE=1000
PLAN_BUSINESS_PRICE=2000
PLAN_BASIC_MAX_FACILITIES=5
PLAN_BASIC_MAX_EMPLOYEES=20
PLAN_BUSINESS_MAX_FACILITIES=15
PLAN_BUSINESS_MAX_EMPLOYEES=50
SUBSCRIPTION_DURATION_DAYS=30

# Настройки полей базы данных
DB_FIELD_NAME_LENGTH=255
DB_FIELD_EMAIL_LENGTH=255
DB_FIELD_PASSWORD_LENGTH=255
DB_FIELD_FIRSTNAME_LENGTH=100
DB_FIELD_LASTNAME_LENGTH=100
DB_FIELD_ADDRESS_LENGTH=255
DB_FIELD_CITY_LENGTH=100
DB_FIELD_STATE_LENGTH=100
DB_FIELD_ZIP_LENGTH=20
DB_FIELD_COORDINATES_PRECISION=10
DB_FIELD_COORDINATES_SCALE=6
DB_FIELD_MONEY_PRECISION=10
DB_FIELD_MONEY_SCALE=2
DB_FIELD_HOURS_PRECISION=5
DB_FIELD_HOURS_SCALE=2
DB_FIELD_NOTIFICATION_TYPE_LENGTH=50
DB_FIELD_NOTIFICATION_TITLE_LENGTH=255
DB_FIELD_TEMPLATE_NAME_LENGTH=100
DB_FIELD_TEMPLATE_SUBJECT_LENGTH=255
DB_FIELD_LOG_LEVEL_LENGTH=20
DB_FIELD_IP_ADDRESS_LENGTH=45
DB_FIELD_USER_AGENT_LENGTH=255

# Настройки ENUM полей
DB_ENUM_USER_ROLES=admin,employer,employee
DB_ENUM_USER_STATUSES=active,inactive,blocked
DB_ENUM_USER_DEFAULT_STATUS=active
DB_ENUM_FACILITY_STATUSES=active,inactive,maintenance
DB_ENUM_FACILITY_DEFAULT_STATUS=active
DB_ENUM_SHIFT_STATUSES=pending,active,completed,cancelled
DB_ENUM_SHIFT_DEFAULT_STATUS=pending
DB_ENUM_PAYMENT_STATUSES=pending,completed,failed,cancelled
DB_ENUM_PAYMENT_DEFAULT_STATUS=pending
DB_ENUM_SUBSCRIPTION_STATUSES=active,expired,cancelled
DB_ENUM_SUBSCRIPTION_DEFAULT_STATUS=active
DB_ENUM_PLAN_DURATIONS=month,quarter,year
DB_ENUM_PLAN_STATUSES=active,inactive
DB_ENUM_PLAN_DEFAULT_STATUS=active
DB_ENUM_TEMPLATE_STATUSES=active,inactive
DB_ENUM_TEMPLATE_DEFAULT_STATUS=active
DB_ENUM_NOTIFICATION_STATUSES=pending,sent,failed
DB_ENUM_NOTIFICATION_DEFAULT_STATUS=pending
DB_ENUM_NOTIFICATION_CHANNELS=email,telegram,web

# Настройки индексов и внешних ключей
DB_INDEX_PREFIX=idx
DB_FOREIGN_KEY_PREFIX=fk
DB_FOREIGN_KEY_ACTION_DELETE=CASCADE
DB_FOREIGN_KEY_ACTION_RESTRICT=RESTRICT
DB_FOREIGN_KEY_ACTION_SET_NULL=SET NULL

# Типы полей базы данных
DB_TYPE_PRIMARY_KEY=INT UNSIGNED
DB_TYPE_FOREIGN_KEY=INT UNSIGNED
DB_TYPE_TIMESTAMP=DATETIME

# Сообщения валидации
VALIDATION_REQUIRED=Поле обязательно для заполнения
VALIDATION_EMAIL=Неверный формат email
VALIDATION_MIN=Значение должно быть не менее %s
VALIDATION_MAX=Значение должно быть не более %s
VALIDATION_NUMERIC=Значение должно быть числом
VALIDATION_DATE=Неверный формат даты
VALIDATION_IN=Недопустимое значение
VALIDATION_UNIQUE=Значение уже существует

# Сообщения об ошибках
ERROR_UNAUTHORIZED=Требуется авторизация
ERROR_FORBIDDEN=Доступ запрещен
ERROR_ACCESS_DENIED=Отказано в доступе

APP_NAMESPACE=Spbot
VIEWS_PATH=resources/views 